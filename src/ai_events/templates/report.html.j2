    <script>
        // Populate filter dropdowns
        function populateFilters() {
            const cityFilter = document.getElementById('cityFilter');
            const tagFilter = document.getElementById('tagFilter');
            
            const cities = new Set();
            const allTagsMap = new Map(); // Map city to its tags
            
            // Get tags from visible span elements in event cards
            const eventCards = document.querySelectorAll('.event-card[data-city]');
            eventCards.forEach(card => {
                const city = card.getAttribute('data-city');
                
                if (city && city !== 'Multiple') {
                    cities.add(city);
                    
                    // Get actual theme tags from the span elements
                    const tagSpans = card.querySelectorAll('.event-tags .tag');
                    if (!allTagsMap.has(city)) {
                        allTagsMap.set(city, new Set());
                    }
                    
                    tagSpans.forEach(span => {
                        const tagText = span.textContent.trim();
                        // Only include theme tags, not tier/format tags
                        if (tagText && 
                            !['Flagship', 'Major', 'Focused', 'Live', 'Virtual', 'Hybrid'].includes(tagText) &&
                            !span.classList.contains('tier-flagship') &&
                            !span.classList.contains('tier-major') &&
                            !span.classList.contains('tier-focused')) {
                            allTagsMap.get(city).add(tagText);
                        }
                    });
                }
            });
            
            // Also check minor event items
            const minorEventItems = document.querySelectorAll('.minor-event-item[data-city]');
            minorEventItems.forEach(item => {
                const city = item.getAttribute('data-city');
                if (city) {
                    cities.add(city);
                    // For minor events, we'll use a simplified approach since they don't have visible tags
                    if (!allTagsMap.has(city)) {
                        allTagsMap.set(city, new Set());
                    }
                }
            });
            
            // Add placeholder option for cities
            const placeholderCityOption = document.createElement('option');
            placeholderCityOption.value = '';
            placeholderCityOption.textContent = 'Select Cities';
            placeholderCityOption.disabled = true;
            placeholderCityOption.selected = true;
            cityFilter.appendChild(placeholderCityOption);
            
            // Populate city dropdown
            Array.from(cities).sort().forEach(city => {
                const option = document.createElement('option');
                option.value = city;
                option.textContent = city;
                cityFilter.appendChild(option);
            });
            
            // Store the tags map for dynamic filtering
            window.cityTagsMap = allTagsMap;
            
            // Initially populate all unique tags
            updateTagFilter();
        }
        
        // Update tag filter based on selected cities
        function updateTagFilter() {
            const cityFilter = document.getElementById('cityFilter');
            const tagFilter = document.getElementById('tagFilter');
            const selectedCities = Array.from(cityFilter.selectedOptions).map(option => option.value).filter(v => v);
            
            // Clear existing options
            tagFilter.innerHTML = '';
            
            let tagsToShow = new Set();
            
            if (selectedCities.length > 0 && window.cityTagsMap) {
                // Show only tags for selected cities
                selectedCities.forEach(city => {
                    if (window.cityTagsMap.has(city)) {
                        window.cityTagsMap.get(city).forEach(tag => tagsToShow.add(tag));
                    }
                });
            } else {
                // Show all tags from all cities
                if (window.cityTagsMap) {
                    window.cityTagsMap.forEach(cityTags => {
                        cityTags.forEach(tag => tagsToShow.add(tag));
                    });
                }
            }
            
            // Add placeholder option for tags
            const placeholderTagOption = document.createElement('option');
            placeholderTagOption.value = '';
            placeholderTagOption.textContent = 'Select Tags';
            placeholderTagOption.disabled = true;
            placeholderTagOption.selected = true;
            tagFilter.appendChild(placeholderTagOption);
            
            // Populate tag dropdown
            Array.from(tagsToShow).sort().forEach(tag => {
                const option = document.createElement('option');
                option.value = tag;
                option.textContent = tag;
                tagFilter.appendChild(option);
            });
        }
        
        // Update filter count displays
        function updateFilterCounts() {
            const cityFilter = document.getElementById('cityFilter');
            const tagFilter = document.getElementById('tagFilter');
            const cityFilterCount = document.getElementById('cityFilterCount');
            const tagFilterCount = document.getElementById('tagFilterCount');
            
            // Ensure elements exist before updating
            if (!cityFilter || !tagFilter || !cityFilterCount || !tagFilterCount) {
                console.warn('Filter elements not found');
                return;
            }
            
            const selectedCities = Array.from(cityFilter.selectedOptions).map(option => option.value).filter(v => v);
            const selectedTags = Array.from(tagFilter.selectedOptions).map(option => option.value).filter(v => v);
            
            // Update city filter count display
            if (selectedCities.length === 0) {
                cityFilterCount.textContent = '(All)';
                cityFilterCount.innerHTML = '(All)'; // Force update on mobile
            } else {
                cityFilterCount.textContent = `(${selectedCities.length} selected)`;
                cityFilterCount.innerHTML = `(${selectedCities.length} selected)`;
            }
            
            // Update tag filter count display
            if (selectedTags.length === 0) {
                tagFilterCount.textContent = '(All)';
                tagFilterCount.innerHTML = '(All)'; // Force update on mobile
            } else {
                tagFilterCount.textContent = `(${selectedTags.length} selected)`;
                tagFilterCount.innerHTML = `(${selectedTags.length} selected)`;
            }
        }
        
        // Update event statistics based on visible events
        function updateEventStats() {
            // Count visible US events
            let usTotal = 0;
            let usFlagship = 0;
            let usMajor = 0;
            let usOther = 0;
            
            // Count main US event cards
            const usSection = document.getElementById('us-events');
            if (usSection) {
                const usCards = usSection.querySelectorAll('.event-card:not(.hidden):not(.minor-events)');
                usCards.forEach(card => {
                    usTotal++;
                    const tierTags = card.querySelectorAll('.tier-flagship, .tier-major');
                    if (card.querySelector('.tier-flagship')) {
                        usFlagship++;
                    } else if (card.querySelector('.tier-major')) {
                        usMajor++;
                    }
                });
                
                // Count visible minor US events
                const usMinorTile = usSection.querySelector('.minor-events:not(.hidden)');
                if (usMinorTile) {
                    const visibleMinorItems = usMinorTile.querySelectorAll('.minor-event-item:not([style*="display: none"])');
                    usOther = visibleMinorItems.length;
                    usTotal += usOther;
                }
            }
            
            // Count visible International events
            let intlTotal = 0;
            let intlFlagship = 0;
            let intlMajor = 0;
            let intlOther = 0;
            
            // Count main International event cards
            const intlSection = document.getElementById('intl-events');
            if (intlSection) {
                const intlCards = intlSection.querySelectorAll('.event-card:not(.hidden):not(.minor-events)');
                intlCards.forEach(card => {
                    intlTotal++;
                    if (card.querySelector('.tier-flagship')) {
                        intlFlagship++;
                    } else if (card.querySelector('.tier-major')) {
                        intlMajor++;
                    }
                });
                
                // Count visible minor International events
                const intlMinorTile = intlSection.querySelector('.minor-events:not(.hidden)');
                if (intlMinorTile) {
                    const visibleMinorItems = intlMinorTile.querySelectorAll('.minor-event-item:not([style*="display: none"])');
                    intlOther = visibleMinorItems.length;
                    intlTotal += intlOther;
                }
            }
            
            // Update US stats display
            const usEventCount = document.getElementById('usEventCount');
            const usEventBreakdown = document.getElementById('usEventBreakdown');
            if (usEventCount) {
                usEventCount.textContent = usTotal;
            }
            if (usEventBreakdown) {
                usEventBreakdown.textContent = `${usFlagship} flagship, ${usMajor} major, ${usOther} other`;
            }
            
            // Update International stats display
            const intlEventCount = document.getElementById('intlEventCount');
            const intlEventBreakdown = document.getElementById('intlEventBreakdown');
            if (intlEventCount) {
                intlEventCount.textContent = intlTotal;
            }
            if (intlEventBreakdown) {
                intlEventBreakdown.textContent = `${intlFlagship} flagship, ${intlMajor} major, ${intlOther} other`;
            }
        }
        
        // Filter events
        function filterEvents() {
            const cityFilter = document.getElementById('cityFilter');
            const tagFilter = document.getElementById('tagFilter');
            
            // Get selected values, filtering out empty/placeholder values
            const selectedCities = Array.from(cityFilter.selectedOptions)
                .map(option => option.value)
                .filter(v => v && v !== '');
            const selectedTags = Array.from(tagFilter.selectedOptions)
                .map(option => option.value)
                .filter(v => v && v !== '');
            
            // Update filter count displays
            updateFilterCounts();
            
            // Filter main event cards
            const eventCards = document.querySelectorAll('.event-card[data-city]');
            eventCards.forEach(card => {
                const city = card.getAttribute('data-city');
                
                let showCard = true;
                
                // Filter by cities (skip "Multiple" for minor events tiles)
                if (selectedCities.length > 0 && city !== 'Multiple') {
                    if (!selectedCities.includes(city)) {
                        showCard = false;
                    }
                }
                
                // Filter by tags - check actual visible tag spans
                if (selectedTags.length > 0) {
                    const tagSpans = card.querySelectorAll('.event-tags .tag');
                    let hasMatchingTag = false;
                    
                    tagSpans.forEach(span => {
                        const tagText = span.textContent.trim();
                        if (selectedTags.includes(tagText)) {
                            hasMatchingTag = true;
                        }
                    });
                    
                    if (!hasMatchingTag) {
                        showCard = false;
                    }
                }
                
                if (showCard) {
                    card.classList.remove('hidden');
                } else {
                    card.classList.add('hidden');
                }
            });
            
            // Filter individual items within minor events tiles
            const minorEventItems = document.querySelectorAll('.minor-event-item[data-city]');
            minorEventItems.forEach(item => {
                const city = item.getAttribute('data-city');
                const tags = item.getAttribute('data-tags');
                
                let showItem = true;
                
                // Filter by cities
                if (selectedCities.length > 0) {
                    if (!selectedCities.includes(city)) {
                        showItem = false;
                    }
                }
                
                // Filter by tags
                if (selectedTags.length > 0) {
                    let hasMatchingTag = false;
                    if (tags) {
                        selectedTags.forEach(tag => {
                            if (tags.includes(tag)) {
                                hasMatchingTag = true;
                            }
                        });
                    }
                    if (!hasMatchingTag) {
                        showItem = false;
                    }
                }
                
                if (showItem) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
            
            // Hide minor events tiles if no items are visible
            document.querySelectorAll('.minor-events').forEach(tile => {
                const visibleItems = tile.querySelectorAll('.minor-event-item[style="display: block"], .minor-event-item:not([style*="display: none"])');
                if (selectedCities.length > 0 || selectedTags.length > 0) {
                    if (visibleItems.length === 0) {
                        tile.classList.add('hidden');
                    } else {
                        tile.classList.remove('hidden');
                    }
                }
            });
            
            // Update event statistics
            updateEventStats();
        }
        
        // Reset filters
        function resetFilters() {
            const cityFilter = document.getElementById('cityFilter');
            const tagFilter = document.getElementById('tagFilter');
            
            // Clear all selections
            Array.from(cityFilter.options).forEach(option => option.selected = false);
            Array.from(tagFilter.options).forEach(option => option.selected = false);
            
            // Select the placeholder options
            const cityPlaceholder = cityFilter.querySelector('option[value=""]');
            const tagPlaceholder = tagFilter.querySelector('option[value=""]');
            if (cityPlaceholder) cityPlaceholder.selected = true;
            if (tagPlaceholder) tagPlaceholder.selected = true;
            
            // Ensure placeholder options are visible by scrolling them into view
            setTimeout(() => {
                if (cityPlaceholder) {
                    cityPlaceholder.scrollIntoView({ block: 'nearest' });
                }
                if (tagPlaceholder) {
                    tagPlaceholder.scrollIntoView({ block: 'nearest' });
                }
            }, 10);
            
            // Show all events
            document.querySelectorAll('.event-card').forEach(card => {
                card.classList.remove('hidden');
            });
            
            // Show all minor event items
            document.querySelectorAll('.minor-event-item').forEach(item => {
                item.style.display = 'block';
            });
            
            // Show all minor events tiles
            document.querySelectorAll('.minor-events').forEach(tile => {
                tile.classList.remove('hidden');
            });
            
            // Update tag filter to show all tags again
            updateTagFilter();
            
            // Update filter counts and stats
            updateFilterCounts();
            updateEventStats();
        }
        
        // Initialize filters on page load
        document.addEventListener('DOMContentLoaded', function() {
            populateFilters();
            
            // Ensure filter counts are set after a delay for mobile
            setTimeout(function() {
                updateFilterCounts();
                updateEventStats();
            }, 100);
            
            // Also update on window load for mobile browsers
            window.addEventListener('load', function() {
                updateFilterCounts();
                updateEventStats();
            });
            
            // Add event listeners for filters
            const cityFilter = document.getElementById('cityFilter');
            const tagFilter = document.getElementById('tagFilter');
            
            cityFilter.addEventListener('change', function(e) {
                // Ensure placeholder is deselected when cities are selected
                const placeholderOption = cityFilter.querySelector('option[value=""]');
                if (placeholderOption) {
                    placeholderOption.selected = false;
                }
                
                updateTagFilter();
                filterEvents();
                updateFilterCounts();
                updateEventStats();
            });
            
            tagFilter.addEventListener('change', function(e) {
                // Ensure placeholder is deselected when tags are selected
                const placeholderOption = tagFilter.querySelector('option[value=""]');
                if (placeholderOption) {
                    placeholderOption.selected = false;
                }
                
                filterEvents();
                updateFilterCounts();
                updateEventStats();
            });
        });

        // Smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Scroll to top functionality
        const scrollToTopBtn = document.getElementById('scrollToTop');
        
        window.addEventListener('scroll', function() {
            if (window.pageYOffset > 300) {
                scrollToTopBtn.classList.add('visible');
            } else {
                scrollToTopBtn.classList.remove('visible');
            }
        });
        
        scrollToTopBtn.addEventListener('click', function() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        });
    </script>
